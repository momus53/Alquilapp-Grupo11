<div class="container-fluid align-content-md-center "  >
	<% if @error != nil %>
        <div class="alert alert-danger alert-dismissible fade show container-md mb-3 " > 
			<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="red" class="bi bi-exclamation-octagon" viewBox="0 0 16 16">
			<path d="M4.54.146A.5.5 0 0 1 4.893 0h6.214a.5.5 0 0 1 .353.146l4.394 4.394a.5.5 0 0 1 .146.353v6.214a.5.5 0 0 1-.146.353l-4.394 4.394a.5.5 0 0 1-.353.146H4.893a.5.5 0 0 1-.353-.146L.146 11.46A.5.5 0 0 1 0 11.107V4.893a.5.5 0 0 1 .146-.353L4.54.146zM5.1 1 1 5.1v5.8L5.1 15h5.8l4.1-4.1V5.1L10.9 1H5.1z"/>
			<path d="M7.002 11a1 1 0 1 1 2 0 1 1 0 0 1-2 0zM7.1 4.995a.905.905 0 1 1 1.8 0l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 4.995z"/>
			</svg>
			Alerta: <%= @error %>
			<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
		</div>
    <% end %>
    <%= bootstrap_form_for(@usuario, layout: :horizontal,label_errors: true, inline_errors: true ) do |f| %>
		<div class="d-none" >
			<%= f.text_field :nivel %>
			<%= f.number_field :monto_actual%>
		</div>
            
        <%= f.text_field :nombre,  placeholder: "Nombre" ,pattern: "[\t A-Za-z]{2,}", required: true %>
        <%= f.text_field :apellido,  placeholder: "Apellido " ,pattern: "[\t A-Za-z]{2,}", required: true %>
        <%= f.email_field :email, placeholder: "Email" , required: true%>
        <%= f.number_field :dni, placeholder: "Numero de DNI", min: "1000000", max: "99999999", required: true%>
        <%= f.password_field :pwd,  placeholder: "Contraseña" , required: true %>		
	
		<div class="d-flex align-items-center flex-column" >
			<div class="form-check p-3 mb-3">
				<input class="form-check-input" type="checkbox" value=false id="invalidCheck" required>
				<label class="form-check-label" for="invalidCheck">Acepto los terminos y condiciones</label>
				      <div class="invalid-feedback">
				      Debe aceptar los terminos antes de seguir.
				      </div>
			</div>
		</div>	
	    <%= f.submit "Registrarse", class: "btn btn-primary d-flex align-items-center flex-column" %>
	  			
	  			<!-- boton de cancelar operacion  -->
	  	  <div class="container text-center p-4">
			  <button type="button" class="btn btn-secondary" onclick="volver()">Cancelar</button>
		  </div>
	  </div>
    <% end %>
    REDIRECCIONAR A INICIAR SESION
</div>
	

<script>
	function volver(){
		window.history.back(1);
	}
</script>