<script>

    if(new URLSearchParams(document.location.search).get("mensaje") != null){
        var myModal = new bootstrap.Modal(document.getElementById("notificacion"));
        document.onreadystatechange = function () {
            myModal.show();
        };
        msg = new URLSearchParams(document.location.search).get("mensaje");
        switch (msg) {
        case "payment_accepted":
            document.getElementById("texto_modal_msg").innerHTML= "La transaccion se completo correctamente!";
            document.getElementById("tilde").hidden=false;
            break;
        case "payment_rejected_insufficient_balance":
            document.getElementById("texto_modal_msg").innerHTML= "La tarjeta que ingresaste no tiene fondos suficientes.";
            document.getElementById("error").hidden=false;
            break;

        case "payment_rejected_invalid_number":
            document.getElementById("texto_modal_msg").innerHTML= "Las credenciales ingresadas son erroneas, vuelva a intentarlo.";
            document.getElementById("error").hidden=false;
        break;
        case "payment_rejected_invalid_code":
            document.getElementById("texto_modal_msg").innerHTML= "Las credenciales ingresadas son erroneas, vuelva a intentarlo.";
            document.getElementById("error").hidden=false;
        break;
        case "payment_rejected_invalid_holder_name":
            document.getElementById("texto_modal_msg").innerHTML= "Las credenciales ingresadas son erroneas, vuelva a intentarlo.";
            document.getElementById("error").hidden=false;
        break;

        case "rejected_expired_card":
            document.getElementById("texto_modal_msg").innerHTML= "La tarjeta ingresada expiro.";
            document.getElementById("error").hidden=false;
            break;
        case "err_timeout":
            document.getElementById("texto_modal_msg").innerHTML= "Algo salio mal! Vuelve a intentarlo mas tarde.";
            document.getElementById("error").hidden=false;
            break;
        default:
            document.getElementById("texto_modal_msg").innerHTML= "Ocurrio un error inesperado!";
            document.getElementById("error").hidden=false;
            break;
        }       
        carga();
    }
    

    function carga() {
        if(!window.location.hash) {
            window.location = window.location + '#loaded';
            window.location.reload();
        }
    }
</script>

<script>
    (() => {
        'use strict'
    
        // Fetch all the forms we want to apply custom Bootstrap validation styles to
        const forms = document.querySelectorAll('.needs-validation')
    
        // Loop over them and prevent submission
        Array.from(forms).forEach(form => {
        form.addEventListener('submit', event => {
            if (!form.checkValidity()) {
            event.preventDefault()
            event.stopPropagation()
            }
            form.classList.add('was-validated')
        }, false)
        })
    })()
</script>