<! nuevo informe >

	<!-- titulo del informe-->
<div class="mb-3" >
  <label for="formGroupExampleInput" class="form-label">titulo del informe</label>
  <input type="text" class="form-control" id="formGroupExampleInput" placeholder="titulo corto y descriptivo de la situacion">
</div>

	<!-- area de texto-->
<div class="mb-3">
  <label for="formGroupExampleInput2" class="form-label">descripcion</label>
  <textarea class="form-control" id="exampleFormControlTextarea1" rows="4" placeholder="descripcion en golpes, daños o detalles en el auto" ></textarea>
</div>

	<!-- imagen ejemplo piezas -->
<%= image_tag("auto-partes.jpeg",:height => "280") %>

	<!-- selector de piezas deslizable-->
<div class="input-group mb-3">
  <button class="btn btn-outline-secondary" type="button">Pieza n° :</button>
  <select class="form-select" id="inputGroupSelect03" aria-label="Example select with button addon">
		<option selected></option>
		<% for j in 1..20 %>
		<option value=<%= j %>> <%= j %> </option>
		<% end %>
	</select>
</div>

	<!-- checkbox terminos y condiciones  -->
<div class="col-12" class="form-check">
	<div class="mb-3 form-check">
		<input type="checkbox" class="form-check-input" id="exampleCheck1">
		<label class="form-check-label" for="invalidCheck">Acepto los terminos y condiciones</label>
		<input class="form-check-input" type="checkbox" id="invalidCheck" required>
                  <div class="invalid-feedback">
                  Debe aceptar los terminos antes de seguir.
                  </div>
	</div>
</div>

	<!-- boton enviar informe  -->
  <div class="col-auto">
    <button type="submit" class="btn btn-primary mb-3">Enviar Informe</button>
  </div>



