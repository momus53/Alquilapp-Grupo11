<! Muestra los Informes >

<% if @informes!= nil and  @usuario!=nil %>

  <%= render "/mapas/nav" %>
<div id="espacio-nav" style="height: 70px;"></div>   

  <div class="container-fluid align-items-center" >
    <% @informes.each do |i| %>
    <div>
      <button class="rounded-pill  p-1 md-1"  data-bs-toggle="modal" data-bs-target="#t<%=i.id.to_s%>">
        <%=i.titulo %> 
      </button>

      <div class="modal fade" id="t<%=i.id.to_s%>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
          <div class="modal-content">
            <div class="modal-header">
              <h1 class="modal-title fs-5" id="exampleModalLabel">Informe: <%=i.id%> </h1>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <div class="container">
                <div class="row">
                  <div class="col">titulo:</div>
                  <div class="col"><%=  i.titulo %></div>
                  <div class="w-100"></div>
                  <div class="col">descripcion:</div>
                  <div class="col"><%=  i.descripcion  %></div>
                  <div class="w-100"></div>
                  <div class="col">parte involucrada:</div>
                  <div class="col"><%=  i.parte_involucrada  %></div>
                  <div class="w-100"></div>
                  <div class="col">validado:</div>
                  <div  class="col" > <%= i.validado %>  
                  		<svg xmlns="http://www.w3.org/2000/svg" width="21" height="21" fill="green" class="bi bi-check-circle" viewBox="0 0 16 16">
                  			<path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                  			<path d="M10.97 4.97a.235.235 0 0 0-.02.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05z"/>	   <! check svg ok>
                			</svg>
                  </div>
                </div>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-warning" data-bs-dismiss="modal" >Volver</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>  
</div> 

  <%end   #final del each%> 
  <%else%>
  <h1> ERROR DE PARAMETROS </h1>

  <%end  #final del if paramets %>








